<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Implement ability to search languages -->
    <LinearLayout
        android:id="@+id/speech_language_filter_layout"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@android:drawable/ic_search_category_default"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/speech_language_filter"
            android:hint="Search Language"
            android:maxLines="1"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ListView
        android:id="@+id/speech_language_list_view"
        android:layout_below="@id/speech_language_filter_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>